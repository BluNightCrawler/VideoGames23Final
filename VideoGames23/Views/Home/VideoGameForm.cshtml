@model VideoGames23.Models.Product
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
    <head>
    <meta name="viewport" content="width=device-width" />
    <title>VideoGameProduct</title>
    <link rel="stylesheet" href="/css/style.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
    <form asp-action="VideoGameForm" method="post" class="m-2">
        <h5 class="bg-primary text-white text-center m-2 p-2">Video Games</h5>
        
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="ProductName"> Your video game title</label>
            <input asp-for="ProductName" />
        </div>
        <div class="form-group">
            <label asp-for="Description"> Just give a a description of the game</label>
            <input asp-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="Price"> Your video game value</label>
            <input asp-for="Price" />
        </div>
        <div class="form-group">
            <label asp-for="Category"> Your video game genre</label>
            <input asp-for="Category" />
        </div>
        <div class="form-group">
            <label asp-for="System"> What platform is the game on?</label>
            <input asp-for="System" />
        </div>
        <button type="submit" class="btn btn-primary">Submit Video Game</button>



    </form>
    </body>




</html>
